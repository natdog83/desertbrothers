<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Style explicit list view definition -->
    <record model="ir.ui.view" id="style_view_tree">
      <field name="name">Style List</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="category"/>
          <field name="number"/>
        </tree>
      </field>
    </record>

    <!-- Style form view definition -->
    <record model="ir.ui.view" id="style_view_form">
      <field name="name">Style Form</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1><field name="name" /></h1>
            <group>
              <group string="Style">
                <!-- <field name="name" class="oe_edit_only" /> -->
                <field name="category" />
                <field name="style_guide" />
              </group>
              <group string="Type">
                <label for="number">Number</label>
                <div>
                  <field name="number" class="oe_inline" />
                  <field name="style_letter" class="oe_inline nolabel" />
                </div>
                <newline />
                <field name="beer_type" />
              </group>
            </group>
            <group col="2">
              <group string="Specific Gravity" col="6" colspan="1">
                <div class="oe_inline oe_form_label"></div>
                <div class="oe_inline oe_form_label">Minimum</div>
                <div class="oe_inline oe_form_label">Maximum</div>
                <newline />
                <div class="oe_inline oe_form_label">Original Gravity</div>
                <div class="oe_inline oe_form_label"><field name="og_min" class="oe_inline nolabel" /></div>
                <div class="oe_inline oe_form_label"><field name="og_max" class="oe_inline nolabel" /></div>
                <newline />
                <div class="oe_inline oe_form_label">Final Gravity</div>
                <div class="oe_inline oe_form_label"><field name="Final_Gravity_min" class="oe_inline nolabel" /></div>
                <div class="oe_inline oe_form_label"><field name="fg_max" class="oe_inline nolabel" /></div>
                <newline />
              </group>
              <group string="Bitterness and Carbonation" col="6" colspan="1">
                <div class="oe_inline oe_form_label"></div>
                <div class="oe_inline oe_form_label">Minimum</div>
                <div class="oe_inline oe_form_label">Maximum</div>
                <newline />
                <div class="oe_inline oe_form_label">Bitterness</div>
                <div class="oe_inline"><field name="bitterness_min" class="oe_inline nolabel" /></div>
                <div class="oe_inline"><field name="bitterness_max" class="oe_inline nolabel" /></div>
                <newline />
                <div class="oe_inline oe_form_label">Carbonation</div>
                <div class="oe_inline"><field name="carbonation_min" class="oe_inline nolabel" /></div>
                <div class="oe_inline"><field name="carbonation_max" class="oe_inline nolabel" /></div>
                <newline />
              </group>
            </group>
            <group col='2'>
              <group string="Color" col="6" colspan="1">
                <div class="oe_inline oe_form_label"></div>
                <div class="oe_inline oe_form_label">Minimum</div>
                <div class="oe_inline oe_form_label">Maximum</div>
                <newline />
                <div class="oe_inline oe_form_label">Color</div>
                <div class="oe_inline oe_form_label"><field name="color_min" class="oe_inline nolabel" /></div>
                <div class="oe_inline oe_form_label"><field name="color_max" class="oe_inline nolabel" /></div>
                <newline />
              </group>
              <group string="Alcohol by Volume" col="6" colspan="1">
                <div class="oe_inline oe_form_label"></div>
                <div class="oe_inline oe_form_label">Minimum</div>
                <div class="oe_inline oe_form_label">Maximum</div>
                <newline />
                <div class="oe_inline oe_form_label">Alcohol by Volume</div>
                <div class="oe_inline"><field name="abv_min" class="oe_inline nolabel" /></div>
                <div class="oe_inline"><field name="abv_max" class="oe_inline nolabel" /></div>
                <newline />
              </group>
            </group>
            <group string="Description">
              <field name="description" />
              <field name="profile" />
              <field name="ingredients" />
              <field name="examples" />
              <field name="web_link" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <act_window
      id="style_action"
      name=" Beer Styles"
      res_model="ahb_recipes.styles" />
    <menuitem
      id="style_menu"
      name="Styles"
      action="style_action"
      parent=""
      sequence='8' />
  </data>
</openerp>
