<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Style explicit list view definition -->
    <record model="ir.ui.view" id="style_view_tree">
      <field name="name">Style List</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="category"/>
          <field name="number"/>
        </tree>
      </field>
    </record>

    <!-- Style form view definition -->
    <record model="ir.ui.view" id="style_view_form">
      <field name="name">Style Form</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <label for="name" class="oe_edit_only"/>
            <h1><field name="name"/></h1>
            <label for="category" class="oe_inline"/>
            <field name="category"/>: <label for="style_guide" />
            <field name="style_guide"/>
            <label for="beer_type" />
            <field name="beer_type"/>
            <div class="oe_button_box" name="button_box">
              <button string="Schedule/Log Call" name="..." type="action"/>
              <button string="Schedule Meeting" name="action_makeMeeting" type="object"/>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <act_window
      id="style_action"
      name=" Beer Styles"
      res_model="ahb_recipes.styles" />
    <menuitem
      id="style_menu"
      name="Styles"
      action="style_action"
      parent=""
      sequence='8' />
  </data>
</openerp>
