<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Style explicit list view definition -->
    <record model="ir.ui.view" id="style_view_tree">
      <field name="name">Style List</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="category"/>
          <field name="number"/>
        </tree>
      </field>
    </record>

    <!-- Style form view definition -->
    <record model="ir.ui.view" id="style_view_form">
      <field name="name">Style Form</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1><field name="name" /></h1>
            <group>
              <group string="Style">
                <!-- <field name="name" class="oe_edit_only" /> -->
                <field name="category" />
                <field name="style_guide" />
              </group>
              <group string="Type">
                <label for="number">Number</label>
                <div>
                  <field name="number" class="oe_inline" />
                  <field name="style_letter" class="oe_inline nolabel" />
                </div>
                <newline />
                <field name="beer_type" />
              </group>
            </group>
            <group>
              <group string="Specific Gravity">
                <div class=" oe_form_label oe_align_right"></div>
                <div class=" oe_form_label oe_align_right">Minimum</div>
                <div class=" oe_form_label oe_align_right">Maximum</div>
                <newline />
                <div class=" oe_form_label oe_align_right"></div>
                <field name="og_min" class="oe_inline nolabel oe_left" />
                <field name="og_max" class="oe_inline nolabel oe_right" />
                <newline />
              </group>
              <group string="Bitterness and Carbonatoin">
                <div></div>
                <div>Minimum</div>
                <div>Maximum</div>
              </group>
            </group>
            <div class="oe_button_box" name="button_box">
              <button string="Schedule/Log Call" name="..." type="action"/>
              <button string="Schedule Meeting" name="action_makeMeeting" type="object"/>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <act_window
      id="style_action"
      name=" Beer Styles"
      res_model="ahb_recipes.styles" />
    <menuitem
      id="style_menu"
      name="Styles"
      action="style_action"
      parent=""
      sequence='8' />
  </data>
</openerp>
