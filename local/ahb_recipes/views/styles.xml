<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Style explicit list view definition -->
    <record model="ir.ui.view" id="style_view_tree">
      <field name="name">Style List</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="category"/>
          <field name="number"/>
        </tree>
      </field>
    </record>

    <!-- Style form view definition -->
    <record model="ir.ui.view" id="style_view_form">
      <field name="name">Style Form</field>
      <field name="model">ahb_recipes.styles</field>
      <field name="arch" type="xml">
        <sheet>
          <form>
            <field name="name"/>
            <field name="category"/>
            <field name="style_guide"/>
          </form>
        </sheet>
      </field>
    </record>

    <act_window
      id="style_action"
      name=" Beer Styles"
      res_model="ahb_recipes.styles" />
    <menuitem
      id="style_menu"
      name="Styles"
      action="style_action"
      parent=""
      sequence='8' />
  </data>
</openerp>
